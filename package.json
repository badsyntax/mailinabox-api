{
  "name": "mailinabox-api",
  "version": "0.0.0",
  "description": "Client SDK's for the Mail-in-a-Box API",
  "private": true,
  "scripts": {
    "build": "npm run generate:typescript-fetch",
    "postbuild": "npm i --prefix ./clients/typescript-fetch && npm run build --prefix ./clients/typescript-fetch",
    "generate": "openapi-generator generate -i schema/mailinabox.yml ",
    "generate:typescript-fetch": "TS_POST_PROCESS_FILE='./node_modules/.bin/prettier --write --config ./.prettierrc.ts.json' npm run generate -- -g typescript-fetch -t templates/typescript-fetch -o clients/typescript-fetch --additional-properties=typescriptThreePlus=true,npmName=mailinabox-api,enablePostProcessFile=true --generate-alias-as-model",
    "generate:php": "PHP_POST_PROCESS_FILE='./node_modules/.bin/prettier --write --config ./.prettierrc.php.json' npm run generate -- -g php -o clients/php --additional-properties=enablePostProcessFile=true --generate-alias-as-model",
    "validate": "openapi-generator validate -i schema/mailinabox.yml",
    "prevalidate": "npm run lint",
    "lint": "prettier --check \"**/*.{md,yml,json}\" --ignore-path ./.prettierignore.main",
    "lint:fix": "prettier --write '**/*.{md,yml,json}' --ignore-path ./.prettierignore.main"
  },
  "author": "Richard Willis <willis.rh@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^1.0.15-4.3.1",
    "@prettier/plugin-php": "^0.14.3",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false
  }
}
