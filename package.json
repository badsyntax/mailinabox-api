{
  "name": "mailinabox-api",
  "version": "0.0.0",
  "description": "Client SDK's for the Mail-in-a-Box API",
  "private": true,
  "scripts": {
    "generate:typescript-fetch": "scripts/generate-ts.sh",
    "generate:php": "scripts/generate-php.sh",
    "validate": "openapi-generator validate -i schema/mailinabox.yml",
    "prevalidate": "npm run lint",
    "lint": "prettier --check \"**/*.{md,yml,json}\" --ignore-path ./.prettierignore.main",
    "lint:fix": "prettier --write '**/*.{md,yml,json}' --ignore-path ./.prettierignore.main"
  },
  "author": "Richard Willis <willis.rh@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^1.0.15-4.3.1",
    "@prettier/plugin-php": "^0.14.3",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false
  }
}
